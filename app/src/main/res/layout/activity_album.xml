<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.my_creation.MyCreationActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_mywork" />
    <!-- layoutActionBar -->
    <FrameLayout
        android:id="@+id/layoutActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/actionBar"
            layout="@layout/layout_actionbar" />
    </FrameLayout>



    <!--    deleteSection-->
    <LinearLayout
        android:id="@+id/deleteSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#291985"
        app:layout_constraintTop_toBottomOf="@id/cvType"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        android:paddingVertical="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:clickable="true">

        <ImageView
            android:id="@+id/btnDeleteSelect"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/delete_select"
            />
    </LinearLayout>

    <!--    native_ads-->
    <FrameLayout
        android:id="@+id/native_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/deleteSection">
        <include layout="@layout/ads_native_collap_banner_shimmer" />
    </FrameLayout>

    <!--    frmList-->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/frmList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:background="#291985"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/native_ads" />
    <!--    cvType-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvType"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/layoutActionBar"
        app:strokeColor="@color/transparent"
        app:strokeWidth="0dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!--            btnMySpace-->
            <FrameLayout
                android:id="@+id/btnMySpace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6">

                <!--                imvBgMyAvatar (nền trắng)-->
                <ImageView
                    android:id="@+id/imvBgMyAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    />

                <TextView
                    android:id="@+id/subTabMyAvatar"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:visibility="gone"
                    android:background="@drawable/un_selected_tab_sub"
                    />

                <!--                imvFocusMyAvatar (nền khi chọn)-->
                <ImageView
                    android:id="@+id/imvFocusMyAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/selected_tab"
                    android:visibility="visible" />

                <!--                tvMyAvatar-->
                <TextView
                    android:id="@+id/tvMyAvatar"
                    style="@style/single_marquee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/londrina_solid_regular"
                    android:gravity="center"
                    android:text="@string/my_space"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </FrameLayout>

            <!--            btnMyDesign-->
            <FrameLayout
                android:id="@+id/btnMyDesign"
                android:layout_width="0dp"
                android:translationY="0dp"
                android:layout_marginTop="16dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <!--                imvBgMyDesign (nền trắng)-->
                <ImageView
                    android:id="@+id/imvBgMyDesign"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    />

                <TextView
                    android:id="@+id/subTabMyDesign"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:visibility="visible"
                    android:background="#291985"
                    />
                <!--                imvFocusMyDesign (nền xanh khi chọn)-->
                <ImageView
                    android:id="@+id/imvFocusMyDesign"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:scaleX="1"
                    android:src="@drawable/un_selected_tab"
                    android:visibility="gone" />

                <!--                tvMyDesign-->
                <TextView
                    android:id="@+id/tvMyDesign"
                    style="@style/single_marquee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/londrina_solid_regular"
                    android:gravity="center"
                    android:text="@string/my_design"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

            </FrameLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!--    lnlBottom-->
    <FrameLayout
        android:id="@+id/lnlBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="102dp"
        android:paddingHorizontal="13dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent">

        <include layout="@layout/layout_bottom" />

    </FrameLayout>

    <!--    flNativeCollab-->
    <FrameLayout
        android:id="@+id/flNativeCollab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <include layout="@layout/ads_shimmer_collap_native" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>