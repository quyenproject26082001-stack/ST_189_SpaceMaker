<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Viền gradient bên ngoài -->
    <item>
        <shape>
            <corners android:radius="8dp" />
            <gradient
                android:angle="-90"
                android:endColor="#2641D7"
                android:startColor="#8FFFFD" />
        </shape>
    </item>

    <!-- Lớp trong: nền màu trắng, nhỏ hơn 2dp -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">

        <shape>
            <corners android:radius="6dp" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>

</layer-list>
